<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StandaloneScrollBar">
        <attr name="scrollbarOrientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="scrollbarTrackDrawable" format="reference" />
        <attr name="scrollbarThumbDrawable" format="reference" />
        <attr name="scrollbarMinThumbLength" format="dimension" />
        <attr name="scrollbarThumbLength" format="dimension" />
        <attr name="scrollbarThumbLengthByTrackRatio" format="float" />
        <attr name="scrollbarAutoThumbLength" format="boolean" />
        <!-- Specifies the duration to delayed before the scrollbar hides in millisecond. Its value may
             be positive integer number for a fixed duration, or one of
             the special constants. -->
        <attr name="scrollbarDelayBeforeAutoHideDuration" format="integer">
            <!-- scrollbar will be always shown -->
            <enum name="infinity" value="-1" />
            <!-- scrollbar will be always hidden -->
            <enum name="zero" value="0" />
        </attr>
        <attr name="scrollbarDraggable" format="boolean" />
        <attr name="scrollbarDefaultTrackTint" format="reference|color" />
        <attr name="scrollbarDefaultThumbTint" format="reference|color" />
    </declare-styleable>
</resources>