<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StandaloneScrollBarSample"
        tools:targetApi="36">

        <activity android:name="com.hieupt.android.standalonescrollbar.sample.WebViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.NestedScrollViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.HorizontalScrollViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.ScrollViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.HorizontalGridRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.VerticalGridRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.HorizontalRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.VerticalRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.DynamicVerticalRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.VariousItemHeightVerticalRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.VariousItemWidthHorizontalRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.VariousItemHeightVerticalGridRecyclerViewActivity" />
        <activity android:name="com.hieupt.android.standalonescrollbar.sample.VariousItemWidthHorizontalGridRecyclerViewActivity" />
        <activity
            android:name="com.hieupt.android.standalonescrollbar.sample.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>